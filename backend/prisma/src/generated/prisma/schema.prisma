datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
